{
    "manifest_version" : 3,
    "name" : "CIPM Chromium Extension",
    "description": "A Chromium extension for the CIPM password manager.",
    "version" : "1.0",
    "minimum_chrome_version" : "30",
    "host_permissions": ["https://*/*","http://*/*"],
    "permissions": ["storage","tabs","webRequest","alarms","activeTab","https://*/*","http://*/*"],

    "icons": {
        "16": "Icons/Logo16.png",
        "32": "Icons/Logo32.png",
        "64": "Icons/Logo64.png",
        "128": "Icons/Logo128.png"
    },

    "background": {
        "service_worker": "background-worker.js"
    },

    "action": {
        "default_title": "CIPM Extension",
        "default_popup": "popup.html",
        "default_icon": {
            "32": "Icons/Logo32.png"
        }
    }    
}